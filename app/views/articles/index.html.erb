<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table border="1">
  <thead>
    <tr>
      <th>Sr.</th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each_with_index do |article, index| %>
      <tr>
        <td><%=  index + 1 %></td>
        <td><%= article['title'] %></td>
        <td><%= article['body'] %></td>
        <td><%= link_to 'Show', article_path(article['id']) %></td>
        <td><%= link_to 'Edit', edit_article_path(article['id']) %></td>
        <td><%= link_to 'Destroy', article_path(article['id']), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
